<com.example.android.architecture.blueprints.todoapp.tasks.ScrollChildSwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/refresh_layout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id ="@+id/coinLL"
            android:orientation="vertical">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coin_list"></ListView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/noCoinLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/no_favor_img"
                android:layout_width="@dimen/no_favor_img_size"
                android:layout_height="@dimen/no_favor_img_size"
                android:layout_gravity = "center"
                android:src="@drawable/ic_assignment_turned_in_24dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/no_favor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text =" NO FAVOR COINS , PLEASE ADD FAVOR COINS "
                />

        </LinearLayout>

    </RelativeLayout>



</com.example.android.architecture.blueprints.todoapp.tasks.ScrollChildSwipeRefreshLayout>
