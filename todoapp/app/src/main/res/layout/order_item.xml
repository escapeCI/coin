<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/order_item_left"
    android:paddingRight="@dimen/order_item_right"
    android:layout_marginTop="@dimen/order_item_top"
    android:layout_marginBottom="@dimen/order_item_bottom"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example"
        android:textSize="@dimen/order_item_font_size"
        android:id="@+id/order_item_name"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="@dimen/order_item_font_size"
        android:id="@+id/order_item_price"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="@dimen/order_item_font_size"
        android:id="@+id/order_item_amount"/>



</LinearLayout>